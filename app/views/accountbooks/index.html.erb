<h1>Listing accountbooks</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Person</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accountbooks.each do |accountbook| %>
      <tr>
        <td><%= accountbook.date %></td>
        <td><%= accountbook.amount %></td>
        <td><%= accountbook.person %></td>
        <td><%= accountbook.content %></td>
        <td><%= link_to 'Show', accountbook %></td>
        <td><%= link_to 'Edit', edit_accountbook_path(accountbook) %></td>
        <td><%= link_to 'Destroy', accountbook, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Accountbook', new_accountbook_path %>
